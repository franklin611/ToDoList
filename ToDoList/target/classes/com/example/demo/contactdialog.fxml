<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<DialogPane fx:id = "mainPanel" fx:controller = "com.example.demo.ContactController" xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Fill in the information for the new Task
    </headerText>
    <content>
        <GridPane vgap = "15" hgap = "15">
            <Label text = "Task Name:" GridPane.rowIndex = "0" GridPane.columnIndex = "0"/>
            <TextField fx:id = "firstNameField" GridPane.rowIndex = "0" GridPane.columnIndex = "1"/>

            <Label text = "End Date:" GridPane.rowIndex = "1" GridPane.columnIndex = "0"/>
            <Button text = "Choose End Date" GridPane.rowIndex = "1" GridPane.columnIndex = "2" onAction = "#chooseEndDate"/>
            <TextField fx:id = "lastNameField" GridPane.rowIndex = "1" GridPane.columnIndex = "1" editable="false"/>

            <Label text = "Status:" GridPane.rowIndex = "2" GridPane.columnIndex = "0"/>
            <TextField fx:id = "phoneNumberField" GridPane.rowIndex = "2" GridPane.columnIndex = "1"/>

            <Label text = "Priority (1-5):" GridPane.rowIndex = "3" GridPane.columnIndex = "0"/>
            <TextField fx:id = "addressField" GridPane.rowIndex = "3" GridPane.columnIndex = "1"/>

            <Label text = "Progress:" GridPane.rowIndex = "4" GridPane.columnIndex = "0"/>
            <TextField fx:id = "notesField" GridPane.rowIndex = "4" GridPane.columnIndex = "1"/>
        </GridPane>
    </content>

</DialogPane>
